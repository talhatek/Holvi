<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.holvi">

    <application
        android:name=".ui.HolviApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Holvi">

        <activity
            android:name=".ui.authenticationActivity.AuthenticationActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.Holvi.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.menuActivity.MenuActivity"
            android:exported="true"
            android:label="@string/title_activity_menu"
            android:theme="@style/Theme.Holvi.NoActionBar" />
        <activity
            android:name=".ui.addActivity.AddActivity"
            android:exported="true"
            android:label="@string/title_activity_add"
            android:theme="@style/Theme.Holvi.NoActionBar" />

        <activity
            android:name=".ui.allActivity.AllActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.Holvi.NoActionBar" />
    </application>

</manifest>